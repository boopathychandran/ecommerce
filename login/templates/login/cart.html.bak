{% load static %}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Cart | Chandran Electronics</title>
    <link rel="stylesheet" href="{% static 'css/modern-gradient.css' %}">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <div id="particles-js" style="position:fixed; top:0; left:0; width:100%; height:100%; z-index:-1;"></div>

    <style>
        .main-content {
            background: transparent !important;
        }
    </style>

    <nav class="top-nav">
        <div class="logo">
            <a href="{% url 'ecommerce' %}" style="text-decoration:none;">
                <div
                    style="font-family: var(--font-heading); font-size: 1.5rem; font-weight: 800; color: #1E293B; display: flex; align-items: center; gap: 0.5rem;">
                    <span class="material-icons" style="color: #6366F1;">bolt</span>
                    <span>Chandran<span style="color: #6366F1;">ELECTRONICS</span></span>
                </div>
            </a>
        </div>
        <div class="top-right-actions">
            <a href="{% url 'ecommerce' %}" style="color: #64748B; text-decoration:none; font-weight:600;">Continue
                Shopping</a>
        </div>
    </nav>

    <div class="main-content container" style="max-width: 900px; margin: 0 auto;">
        <h1 class="section-heading">Your Cart</h1>

        <div class="glass-card" style="padding: 2rem;">
            {% if cart %}
            {% for item in cart %}
            <div
                style="display: flex; align-items: center; gap: 1.5rem; padding-bottom: 1.5rem; border-bottom: 1px solid #F1F5F9; margin-bottom: 1.5rem;">
                {% if item.product.image %}
                <img src="{{ item.product.image.url }}" alt="{{ item.product.name }}"
                    style="width: 80px; height: 80px; object-fit: cover; border-radius: 10px;">
                {% else %}
                <img src="{% static 'images/default.jpg' %}"
                    style="width: 80px; height: 80px; object-fit: cover; border-radius: 10px;">
                {% endif %}

                <div style="flex: 1;">
                    <h3 style="margin: 0 0 0.5rem 0; color: #1E293B; font-family: var(--font-heading);">{{
                        item.product.name }}</h3>
                    <div style="color: #64748B;">₹{{ item.product.price }}</div>
                </div>

                <div style="font-weight: bold; color: #1E293B;">x {{ item.quantity }}</div>
                <div style="font-weight: 800; color: #8B5CF6;">₹{{ item.total_price }}</div>

                <form method="POST" action="{% url 'remove_from_cart' item.product.id %}">
                    {% csrf_token %}
                    <button type="submit" style="background: none; border: none; color: #EF4444; cursor: pointer;">
                        <span class="material-icons">delete</span>
                    </button>
                </form>
            </div>
            {% endfor %}

            <div style="text-align: right; margin-top: 2rem;">
                <div style="font-size: 1.5rem; font-weight: 800; color: #1E293B; margin-bottom: 1.5rem;">Total: ₹{{
                    total }}</div>
                <a href="{% url 'address' %}"
                    style="display: inline-block; padding: 1rem 3rem; background: var(--gradient-button); color: white; text-decoration: none; border-radius: 50px; font-weight: bold; box-shadow: 0 10px 20px rgba(139, 92, 246, 0.3);">
                    PROCEED TO CHECKOUT
                </a>
            </div>

            {% else %}
            <div style="text-align: center; padding: 3rem;">
                <span class="material-icons"
                    style="font-size: 4rem; color: #CBD5E1; margin-bottom: 1rem;">shopping_cart_checkout</span>
                <p style="color: #64748B; font-size: 1.1rem;">Your cart is empty.</p>
                <a href="{% url 'ecommerce' %}"
                    style="display: inline-block; margin-top: 1.5rem; color: #6366F1; font-weight: bold; text-decoration: none;">Start
                    Shopping</a>
            </div>
            {% endif %}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        particlesJS('particles-js', {
            "particles": {
                "number": { "value": 60 },
                "color": { "value": "#ffffff" },
                "opacity": { "value": 0.5 },
                "size": { "value": 3 },
                "line_linked": { "enable": true, "distance": 150, "color": "#ffffff", "opacity": 0.4, "width": 1 },
                "move": { "enable": true, "speed": 6 }
            }
        });
    </script>
</body>

</html>